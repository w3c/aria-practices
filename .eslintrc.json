        "test/tests/link_link.js",
        "test/tests/menu-button_actions-active-descendant.js",
        "test/tests/menu-button_actions.js",
        "test/tests/menu-button_links.js",
        "test/util/assertTabOrder.js",
        "test/util/force-serial.js"
      ],
      "rules": {
        "no-undef": 0
      }
    }
  ]
}
